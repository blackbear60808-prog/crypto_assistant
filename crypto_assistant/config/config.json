{
    "project_name": "幣圈交易輔助系統",
    "version": "3.0.0",
    "author": "交易者",
    "description": "加密貨幣交易輔助系統",
    "region": "tw",
    "language": "zh-TW",
    
    "smc_scanner": {
        "enabled": true,
        "scan_interval_minutes": 30,
        "max_concurrent_scans": 5,
        "timeframes": ["1h", "4h", "1d"],
        "min_confidence": 0.7,
        "volume_threshold": 1000000,
        "volatility_threshold": 0.02,
        "notify_on_signals": true,
        "auto_scan_on_startup": true,
        "risk_levels": {
            "high": 0.9,
            "medium": 0.7,
            "low": 0.5
        },
        "filters": {
            "min_price": 0.01,
            "max_price": 100000,
            "exclude_low_volume": true,
            "required_timeframes": 2
        }
    },

    "okx": {
        "api_key": "您的API_KEY",
        "secret_key": "您的SECRET_KEY",
        "passphrase": "您的PASSPHRASE",
        "test_net": true,
        "use_virtual_account": true,
        "timeout": 30000,
        "rate_limit": 100,
        "retry_count": 3,
        "retry_delay": 1
    },

    "database": {
        "path": "data/",
        "auto_backup": true,
        "backup_interval_hours": 24,
        "max_backup_files": 30
    },

    "smc_strategy": {
        "enabled_pairs": [
            "BTC-USDT",
            "ETH-USDT",
            "SOL-USDT",
            "ADA-USDT",
            "DOT-USDT"
        ],
        "timeframe": "1h",
        "confidence_threshold": 0.7,
        "max_signals_per_day": 10
    },

    "discord": {
        "webhook_url": "您的DISCORD_WEBHOOK_URL",
        "enabled": false,
        "notify_level": "important",
        "language": "zh-TW"
    },

    "monitor": {
        "enabled": true,
        "check_interval_seconds": 60,
        "price_alert_threshold": 0.05,
        "balance_alert_threshold": 0.1
    },

    "trading": {
        "initial_capital": 1000,
        "risk_percent": 2.0,
        "atr_multiplier": 2.0,
        "max_positions": 5,
        "enabled": false,
        "trading_mode": "both"
    },

    "copy_trading": {
        "enabled": false,
        "max_copied_traders": 3,
        "auto_follow": true,
        "risk_multiplier": 1.0,
        "min_win_rate": 0.6,
        "min_trades": 10
    },

    "spot_trading": {
        "enabled": true,
        "default_pairs": [
            "BTC-USDT",
            "ETH-USDT",
            "SOL-USDT"
        ],
        "min_trade_amount": 10,
        "max_trade_amount": 1000
    },

    "futures_trading": {
        "enabled": true,
        "default_pairs": [
            "BTC-USDT-SWAP",
            "ETH-USDT-SWAP",
            "SOL-USDT-SWAP"
        ],
        "default_leverage": 10,
        "max_leverage": 20
    },

    "risk_management": {
        "max_daily_loss": 0.05,
        "max_position_size": 0.2,
        "stop_loss_enabled": true,
        "take_profit_enabled": true
    },

    "notifications": {
        "price_alerts": true,
        "trade_execution": true,
        "risk_warnings": true,
        "system_errors": true,
        "language": "zh-TW"
    },

    "dashboard": {
        "auto_refresh": true,
        "refresh_interval": 30,
        "theme": "light",
        "language": "zh-TW",
        "grid_columns": 3,
        "grid_rows": 3,
        "widgets": {
            "price_ticker": {
                "enabled": true,
                "size": "large",
                "title": "即時價格",
                "pairs": [
                    "BTC-USDT",
                    "ETH-USDT",
                    "SOL-USDT"
                ]
            },
            "account_summary": {
                "enabled": true,
                "size": "medium",
                "title": "帳戶總覽",
                "show_breakdown": true
            },
            "portfolio_allocation": {
                "enabled": true,
                "size": "medium",
                "title": "投資組合",
                "show_percentage": true
            },
            "trading_signals": {
                "enabled": true,
                "size": "medium",
                "title": "交易信號",
                "show_confidence": true
            },
            "market_overview": {
                "enabled": true,
                "size": "large",
                "title": "市場概況",
                "show_volatility": true
            },
            "recent_trades": {
                "enabled": true,
                "size": "small",
                "title": "最近交易",
                "limit": 10
            },
            "spot_balance": {
                "enabled": true,
                "size": "small",
                "title": "現貨餘額"
            },
            "futures_positions": {
                "enabled": true,
                "size": "medium",
                "title": "合約持倉"
            }
        },
        "positions": {
            "price_ticker": {
                "row": 0,
                "col": 0,
                "rowspan": 1,
                "colspan": 2
            },
            "account_summary": {
                "row": 0,
                "col": 2,
                "rowspan": 1,
                "colspan": 1
            },
            "portfolio_allocation": {
                "row": 1,
                "col": 0,
                "rowspan": 1,
                "colspan": 1
            },
            "trading_signals": {
                "row": 1,
                "col": 1,
                "rowspan": 1,
                "colspan": 1
            },
            "market_overview": {
                "row": 2,
                "col": 0,
                "rowspan": 1,
                "colspan": 2
            },
            "recent_trades": {
                "row": 1,
                "col": 2,
                "rowspan": 2,
                "colspan": 1
            },
            "spot_balance": {
                "row": 3,
                "col": 0,
                "rowspan": 1,
                "colspan": 1
            },
            "futures_positions": {
                "row": 3,
                "col": 1,
                "rowspan": 1,
                "colspan": 2
            }
        }
    },

    "logging": {
        "level": "INFO",
        "file_enabled": true,
        "max_file_size_mb": 10,
        "backup_count": 5,
        "format": "detailed"
    },

    "backup": {
        "enabled": true,
        "auto_backup": true,
        "backup_path": "backups/",
        "backup_interval_hours": 24,
        "max_backup_files": 30,
        "compress_backups": true
    }
}